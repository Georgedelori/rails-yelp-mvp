<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<div class="panel panel-default">
<h4>Reviews:</h4>
  <div class="list-group">
    <% @restaurant.reviews.each do |review|%>
      <li class="list-group-item">"<%= review.content %>" <strong>Rating:</strong> <%= review.rating %></li>
    <% end %>
  </div>
</div>

<div class="list-inline">
<li><%= link_to "Add a Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"  %></li>
<li><%= link_to "Edit Info", edit_restaurant_path, class: "btn btn-primary"  %></li>
<li><%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-primary" %></li>
</div>
